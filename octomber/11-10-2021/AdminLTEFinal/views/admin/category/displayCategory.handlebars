<div class="col-md-6" style="margin: auto;">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Responsive Hover Table</h3>

            <div class="card-tools">
              <div class="input-group input-group-sm" style="width: 150px;">
                <input
                  type="text"
                  name="table_search"
                  class="form-control float-right"
                  placeholder="Search"
                />

                <div class="input-group-append">
                  <button type="submit" class="btn btn-default"><i
                      class="fas fa-search"
                    ></i></button>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body table-responsive p-0">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Category Name</th>
                </tr>
              </thead>
              {{#each data}}
                <tbody>
                  <tr>
                    <td>{{categoryName}}</td>

                    <td style="width: 20%;">
                      <a
                        href="/admin/category/edit/{{_id}}"
                        class="btn btn-info"
                      >Edit Details</a></td>
                    <td style="width: 10%;"><a
                        class="btn btn-danger"
                      >Delete</a></td>
                  </tr>
                </tbody>
              {{/each}}
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</div>