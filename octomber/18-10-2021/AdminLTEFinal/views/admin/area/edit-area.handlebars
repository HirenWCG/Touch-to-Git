<div class="col-md-8" style="margin: auto;">

  <form method="POST">
    <div class="card card-damger">
      <div class="card-header">
        <h3 class="card-title">Area Edit Form</h3>
      </div>
      <p style="background-color: green; color: white;">{{msg}}</p>
      <div class="card-body">
        <div class="form-group">
          <label>Area</label>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="far fa-square"></i></span>
            </div>
            <input type="text" name="area_name" value="{{mydata.area_name}}" class="form-control"
              placeholder="Enter Area name" required />
          </div>
          <!-- /.input group -->
        </div>
        <!-- /.form group -->
        <div class="form-group">
          <label>Select City</label>
          {{!-- {{city_array}} --}}
          <div class="input-group">
            <select class="form-control select2bs4" style="width: 100%;" name="_city">
              {{#each city_array}}
              <option value='{{_id}}'>{{city_name}}</option>
              {{/each}}
            </select>
          </div>
          <!-- /.input group -->
        </div>
        <!-- /.form group -->

        <div class="form-group">
          <label>Select State</label>
          {{!-- {{state_array}} --}}
          <div class="input-group">
            <select class="form-control select2bs4" style="width: 100%;" name="_state">
              {{#each state_array}}
              <option value='{{_id}}'>{{state_name}}</option>
              {{/each}}
            </select>
          </div>
          <!-- /.input group -->
        </div>
        <!-- /.form group -->

        <input class="btn btn-success" type="submit" value="Edit SubCategory" />
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->

  </form>


</div>