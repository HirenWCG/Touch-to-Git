<div class="col-md-6" style="margin: auto;">
  <form method="POST">
    <div class="card card-danger">
      <div class="card-header">
        <h3 class="card-title">City-State Edit Form</h3>
      </div>
      <p style="background-color: green; color: white;">{{msg}}</p>
      <div class="card-body">
        <div class="form-group">
          <label>City</label>

          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="far fa-square"></i></span>
            </div>
            <input type="text" name="city_name" value="{{mydata.city_name}}" class="form-control"
              placeholder="Enter City name" required />
          </div>
        </div>
        <div class="form-group">
          <label>Select State</label>
          <div class="input-group">
            <select class="form-control select2bs4" style="width: 100%;" name="_state">
              {{#each state_array}}
              <option value='{{_id}}' {{#compare (toString ../mydata._state) '==' (toString _id)}}selected{{/compare}}>
                {{state_name}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        <input class="btn btn-success" type="submit" value="Edit City" />
      </div>
    </div>
  </form>
</div>