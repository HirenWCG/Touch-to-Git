<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
    <style>
        .errClass {
            border: 3px solid red;
        }
    </style>
</head>

<body>
    <div class="col-md-5" style="margin: auto;">
        <form method="POST" id="myform">
            <div class="form-floating mb-3">
                <input type="text" id="myname" name="myname" class="form-control" placeholder="name">
                <label for="floatingInput">Enter Name</label>
                <div style="color: red; margin-top:3px" id="error1"></div>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="email" name="email" placeholder="name@example.com">
                <label for="floatingInput">Email Address</label>
                <div style="color: red;" id="error2"></div>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="number" name="number" placeholder="Enter Mobile Number">
                <label for="floatingInput">Enter Mobile Number</label>
                <div style="color: red;" id="error6"></div>
            </div>
            <div class="form-floating">
                <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                <label for="floatingPassword">Password</label>
                <div style="color: red;" id="error3"></div>
            </div>
            <div class="form-floating">
                <button class="btn btn-primary" style="margin-top: 15px;" type="submit">Add User</button>
            </div>
        </form>
    </div>
    <div id="users">
        {{#each users}}
         <li>{{this.name}}</li>
        {{/each}}
    </div>
</body>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(() => {
            $.validator.addMethod("pwcheck", function (value) {
                return /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) // consists of only these
                    && /[a-z]/.test(value) // has a lowercase letter
                    && /\d/.test(value) // has a digit
            });

            $.validator.addMethod("nameCheck", function (value) {

                return /^[a-zA-Z]+$/.test(value)
            });

            $.validator.addMethod("emailCheck", function (value) {
                return /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/.test(value) // consists of only these
            });

            $("#myform").validate({
                rules: {
                    myname: {
                        required: true,
                        nameCheck: true
                    },
                    email: {
                        required: true,
                        emailCheck: true,
                    },
                    password: {
                        required: true,
                        pwcheck: true
                    },
                    number: {
                        required: true,
                    },
                },
                messages: {
                    myname: {
                        required: "Please Enter Name.",
                        nameCheck: "Only Characters Allowed."
                    },
                    email: {
                        required: "Please enter Address.",
                        emailCheck: "Please enter a valid email address!",
                        remote: "Email already in use!"
                    },
                    password: {
                        required: "Please enter Password.",
                        pwcheck: "The password does not meet the criteria!"
                    },
                    number:{
                        required:"Please Enter Mobile Number!"
                    },
                },
                highlight: function (element) {
                    $(element).addClass("errClass");
                },
                unhighlight: function (element) {
                    $(element).removeClass("errClass");
                },
                errorPlacement: function (error, element) {
                    if (element.attr("id") == "myname") {
                        error.appendTo($('#error1'));
                    } else if (element.attr("id") == "email") {
                        error.appendTo($('#error2'));
                    } else if (element.attr("id") == "password") {
                        error.appendTo($('#error3'));
                    } else if (element.attr("id") == "number"){
                        error.appendTo($("#error6"));
                    }
                },
                

                 submitHandler: function (form, event) {
                    event.preventDefault();
                    console.log("Hi");
                    let dataObject = {
                        name: $("#myname").val(),
                        email: $("#email").val(),
                        number: $("#number").val(),
                        password: $("#password").val()
                    };
                    console.log(dataObject);
                    $.ajax({
                        url: "/api/register",
                        type: "POST",
                        data: dataObject,
                        success: function (result) {
                            $("#users").append(result.result.name);
                        }
                    });
            }


            });
        });
    </script>
</html>